[user]
	name = Maxlufs
	email = maxlufs@hotmail.com
[merge]
	tool = vimdiff
[alias]
	unstage = reset HEAD --
	st = status
	co = checkout
	br = branch
	bra = branch -a
	ci = commit
	ls = ls-files
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ad = add
	cim = commit -m
	verbs = git log --pretty=format:'%s' | cut -d \\  -f 1 | sort | uniq -c | sort -nr
[core]
	excludesfile = ~/.gitignore_global
[color]
	diff = auto
	branch = auto
	status = auto
	ui = auto
	interactive = auto
[color "branch"]
	local = yellow
	remote = cyan
	current = green bold
[color "status"]
	header = normal
[commit]
	template = ~/.gitmessage
